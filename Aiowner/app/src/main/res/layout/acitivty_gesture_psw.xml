<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@drawable/user_title_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80.5dp"
            android:layout_height="18.5dp"
            android:layout_gravity="center_horizontal"
            android:background="#01000000"
            android:src="@drawable/user_content_logo" />

        <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="#01000000"
            android:text="防 盗 密 码"
            android:textColor="@android:color/white"
            android:textSize="27sp" />

        <com.dudu.aiowner.utils.customFontUtils.DINLightFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:background="#01000000"
            android:text="Theft Password"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="170dp"
        android:background="#01000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#01000000"
            android:text="手势设置"
            android:textColor="#727171"
            android:textSize="18sp" />


        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="198dp"
            android:background="@drawable/btn_user_blue_multset_sel"
            android:onClick="startGesturePsw" />

    </LinearLayout>

    <View
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        android:background="#BBBCBC"></View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="230dp"
        android:background="#01000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#01000000"
            android:text="手势开关"
            android:textColor="#727171"
            android:textSize="18sp" />


        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:layout_marginLeft="165dp"
            android:background="@drawable/switch_theft_psw_sel"
            android:checked="false"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

    <View
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:background="#BBBCBC"></View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="290dp"
        android:background="#01000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#01000000"
            android:text="密码设置"
            android:textColor="#727171"
            android:textSize="18sp" />


        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="198dp"
            android:background="@drawable/btn_user_blue_multset_sel"
            android:onClick="startGesturePsw" />

    </LinearLayout>

    <View
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="325dp"
        android:background="#BBBCBC"></View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="350dp"
        android:background="#01000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#01000000"
            android:text="密码开关"
            android:textColor="#727171"
            android:textSize="18sp" />


        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:layout_marginLeft="165dp"
            android:background="@drawable/switch_theft_psw_sel"
            android:checked="false"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

    <View
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="385dp"
        android:background="#BBBCBC"></View>


</RelativeLayout>
