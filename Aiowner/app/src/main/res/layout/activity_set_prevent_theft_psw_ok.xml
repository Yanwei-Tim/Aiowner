<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/owners_certification_review_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:src="@drawable/ok_icon" />

        <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="设置成功"
            android:textColor="@android:color/white"
            android:textSize="19sp" />

        <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
            style="@style/button_big"
            android:layout_marginTop="160dp"
            android:background="@drawable/btn_bg_sel_line"
            android:onClick="startPreventTheft"
            android:text="确 定" />

    </LinearLayout>

</RelativeLayout>