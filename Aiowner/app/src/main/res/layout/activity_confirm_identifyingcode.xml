<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@android:color/white"
            android:text="短信验证码验证"
            android:textColor="@color/bluecolor"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/white">

            <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
                android:id="@+id/login_user_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="60dp"
                android:background="@android:color/white"
                android:text="手机号"
                android:textColor="@color/hintcolor"
                android:textSize="16sp" />

            <com.dudu.aiowner.utils.customFontUtils.FZLFontEditText
                style="@style/registAndLogin_editText"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:background="@drawable/et_gray_line"
                android:textColor="@android:color/black"
                android:gravity="center" />


            <com.dudu.aiowner.utils.customFontUtils.FZLFontEditText
                style="@style/registAndLogin_editText"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="130dp"
                android:background="@drawable/et_gray_line"
                android:textColor="@android:color/black"
                android:gravity="left"
                android:hint="输入手机验证码"
                android:textColorHint="@color/graycolor" />

            <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
                style="@style/button_big"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="110dp"
                android:background="@drawable/btn_bg_checkcode"
                android:text="获取验证码"
                android:textSize="14sp" />

        </FrameLayout>

        <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
            style="@style/button_big"
            android:layout_gravity="center"
            android:layout_marginTop="240dp"
            android:background="@drawable/btn_bg_sel_fill"
            android:onClick="startNewGesturePsw"
            android:text="确 定" />

    </LinearLayout>

</RelativeLayout>