<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="159.5dp"
        android:src="@drawable/key_frame"/>

    <ImageView

        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/prevent_theft_normal"
        android:onClick="startPreventTheft"/>

    <ImageView
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginLeft="221.5dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/prevent_looting_normal"
        android:onClick="startPreventLooting"/>

    <ImageView
        android:layout_width="134dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/center_button"
        android:onClick="startMaintenanceAssistant"/>

    <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:text="保养助手"/>

    <ImageView
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="95dp"
        android:src="@drawable/test_speed_normal"
        android:onClick="startTestSpeed"/>

    <ImageView
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginLeft="221.5dp"
        android:layout_marginTop="95dp"
        android:src="@drawable/drive_normal"
        android:onClick="startDrive"/>


    <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="16.5dp"
        android:layout_weight="1"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="防盗"/>

    <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="166dp"
        android:layout_marginTop="16.5dp"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="防劫"/>

    <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="127.5dp"
        android:layout_weight="1"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="测速"/>

    <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="166dp"
        android:layout_marginTop="127.5dp"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="驾驶"/>

</FrameLayout>
