<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/test_speed_720_00000"/>

           <com.dudu.aiowner.utils.customFontUtils.DINRegularFontTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="0.0s"
               android:textColor="@android:color/white"
               android:textSize="114px"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/acc"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/acc"/>

        <RelativeLayout
            android:id="@+id/speed_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp">
            <ImageView
                android:id="@+id/speed_100km"
                android:layout_width="15dp"
                android:layout_height="15.5dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/group_12"/>

            <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
                android:id="@+id/speed_100km_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/speed_100km"
                android:layout_marginLeft="7dp"
                android:text="100km/h"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/speed_200km"
                android:layout_width="15dp"
                android:layout_height="15.5dp"
                android:layout_toRightOf="@+id/speed_100km_text"
                android:layout_marginLeft="23.5dp"
                android:src="@drawable/ellipse_4"/>

            <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
                android:id="@+id/speed_200km_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/speed_200km"
                android:layout_marginLeft="7dp"
                android:text="200km/h"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/speed_300km"
                android:layout_width="15dp"
                android:layout_height="15.5dp"
                android:layout_toRightOf="@+id/speed_200km_text"
                android:layout_marginLeft="23.5dp"
                android:src="@drawable/ellipse_4"/>

            <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/speed_300km"
                android:layout_marginLeft="7dp"
                android:text="300km/h"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <com.dudu.aiowner.utils.customFontUtils.FZLFontButton
                android:id="@+id/start_test_speed"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/speed_100km"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_bg_sel_line"
                android:onClick="startTestSpeed"
                android:text="开 始 测 速" />

            <com.dudu.aiowner.utils.customFontUtils.FZLFontButton
                android:id="@+id/history_records"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/start_test_speed"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_bg_sel_line"
                android:onClick="startHistoryRecords"
                android:text="历 史 记 录" />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>