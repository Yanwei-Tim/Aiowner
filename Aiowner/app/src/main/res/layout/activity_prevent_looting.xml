<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
        android:id="@+id/prevent_mode_text"
        style="@style/container_operation_tips_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="防劫模式"
        android:textColor="#00bfff"
        android:textSize="16sp" />

    <com.dudu.aiowner.utils.customFontUtils.DINLightFontTextView
        android:id="@+id/prevent_mode_en_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prevent_mode_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="ROBBERY MODE"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:id="@+id/big_light_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prevent_mode_en_text"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hijack_blue_line_01" />

            <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="闪大灯次数\n限制10次"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/hijack_blue_line_02" />
        </LinearLayout>

        <ImageView
            android:layout_width="116dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/open" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emergency_brake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/big_light_num"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hijack_blue_line_01" />

            <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="紧急停车\n后下车"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/hijack_blue_line_02" />
        </LinearLayout>

        <ImageView
            android:layout_width="116dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/open" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/brake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emergency_brake"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hijack_blue_line_01" />

            <com.dudu.aiowner.utils.customFontUtils.FZLFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="25dp"
                android:text="踩刹车3次"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/hijack_blue_line_02" />
        </LinearLayout>

        <ImageView
            android:layout_width="116dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/open" />
    </RelativeLayout>

</RelativeLayout>